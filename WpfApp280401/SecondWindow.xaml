<Window x:Class="WpfApp280401.SecondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp280401"
        mc:Ignorable="d"
        Title="SecondWindow" Height="450" Width="800">

    <Grid>
        <TextBlock x:Name="SecondWindowWidthLabel"  HorizontalAlignment="Left" Margin="150,83,0,0" TextWrapping="Wrap" Text="{Binding WidthChosen }" VerticalAlignment="Top" Height="62" Width="108">
        </TextBlock>

        <TextBlock x:Name="SecondWindowHeightLabel"  HorizontalAlignment="Left" Margin="150,145,0,0" TextWrapping="Wrap" Text="{Binding HeightChosen}" VerticalAlignment="Top" Height="62" Width="108">
        </TextBlock>

        <TextBlock x:Name="SecondWindowextLabel"  HorizontalAlignment="Left" Margin="150,252,0,0" TextWrapping="Wrap" Text="{Binding TextChosen}" VerticalAlignment="Top" Height="58" RenderTransformOrigin="-0.48,0.027" Width="117"/>

    </Grid>
</Window>
